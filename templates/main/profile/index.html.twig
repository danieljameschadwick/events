{% extends 'base.html.twig' %}

{% set isUserProfile = (app.user.username is same as(user)) %}

{% block body %}
    <div class="container">
        {% if navigation %}
            {% include 'includes/ui/navigation.html.twig' %}
        {% endif %}

        <div class="row">
            <h3>{{ user }}</h3>
        </div>

        <div class="row">
            <div class="col-3">
                <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="v-pills-basic-tab" data-toggle="pill" href="#v-pills-basic" role="tab" aria-controls="v-pills-basic" aria-selected="true">Basic Information</a>
                    {% if isUserProfile %}
                        <a class="nav-link" id="v-pills-settings-tab" data-toggle="pill" href="#v-pills-settings" role="tab" aria-controls="v-pills-settings" aria-selected="false">Settings</a>
                    {% endif %}
                </div>
            </div>
            <div class="col-9">
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active" id="v-pills-basic" role="tabpanel" aria-labelledby="v-pills-basic-tab">
                        <div class="row">
                            <div class="col-sm-12">
                                <h4>Basic Information</h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                
                            </div>
                        </div>
                    </div>
                    {% if isUserProfile %}
                        <div class="tab-pane fade" id="v-pills-settings" role="tabpanel" aria-labelledby="v-pills-settings-tab">
                            <h4>Settings</h4>
                            {% if userSettingsForm is not null %}
                                {{ form_start(userSettingsForm) }}
                                    {{ form_row(userSettingsForm.username) }}
                                {{ form_end(userSettingsForm) }}
                            {% else %}
                                {{ dump(userSettingsForm) }}
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

    </div>
{% endblock body %}