{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Events - {{ event.name }}
{% endblock title %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3>{{ event.name }}</h3>
            </div>

            <div class="col-12">
                {{ event.startDateTime|date('d-m-Y') }} - {{ event.endDateTime|date('H:i:s') }}
            </div>
        </div>
    </div>
{% endblock body %}