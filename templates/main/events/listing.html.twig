{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Events
{% endblock title %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h2>Events</h2>
            </div>

            <div class="col-12">
                {% for event in events %}
                    <div class="row">
                        <div class="col-12">
                            <p>
                                {{ event.name }},
                                <a class="link--primary"
                                    href="{{ path('event_view', {'id': event.id, 'slug': event.slug}) }}">
                                     View
                                </a>
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock body %}