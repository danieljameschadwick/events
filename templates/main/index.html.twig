{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Home
{% endblock title %}

{% block body %}
    <div class="container">
    {% if navigation %}
        {% include 'includes/ui/navigation.html.twig' %}
    {% endif %}

    <div class="row">
        <div class="col-12 col-sm-7">
            <h2>Your upcoming events</h2>
            {% for event in app.user.events %}
                <div class="row">
                    <div class="col-12">
                        <p>
                            <a href="{{ path('event_view', {'id': event.id, 'name': event.name}) }}">{{ event.name }}</a>,
                            {{ event.startDateTime|date('d/m/Y H:i:s') }}
                            - {{ event.endDateTime|date('H:i:s') }}
                        </p>
                    </div>
                </div>
            {% else %}
                <p>You haven't signed up for any events yet. Consider looking <a>here</a>.</p>
            {% endfor %}
        </div>

        <div class="col-12 col-sm-5">
            <div class="flex flex-wrap">
                <div class="h-full border-2 border-gray-200 rounded-lg overflow-hidden">
                    <img class="lg:h-48 md:h-36 w-full object-cover object-center"
                         src="https://dummyimage.com/720x400" alt="blog">
                    <div class="p-6 border border-gray-500">
                        <h1 class="title-font text-lg font-medium text-gray-900 mb-3">
                            The Catalyzer
                        </h1>
                        <p class="leading-relaxed mb-3">
                            Photo booth fam kinfolk cold-pressed sriracha leggings jianbing
                            microdosing tousled waistcoat.
                        </p>
                        <div class="flex items-center flex-wrap ">
                            <a class="text-indigo-500 inline-flex items-center md:mb-2 lg:mb-0">
                                Learn More
                                <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24"
                                     stroke="currentColor" stroke-width="2" fill="none"
                                     stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M5 12h14"></path>
                                    <path d="M12 5l7 7-7 7"></path>
                                </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock body %}