{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h2>News</h2>
            </div>

            <div class="col-12">
                {% for article in articles %}
                    <div class="row">
                        <div class="col-12">
                            <p>
                                {{ article.title }},

                                <a href="{{ path('news_view', {'id': article.id, 'slug': article.slug}) }}">View</a>
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock body %}