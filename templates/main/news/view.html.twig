        <div class="row">
            <div class="col-12">
                <h2>{{ article.title }}</h2>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                {{ article.text }}
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12">
                - {{ article.author.name }}
            </div>
        </div>
    </div>
{% endblock body %}