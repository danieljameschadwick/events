<div id="dropdown" class="dropdown relative inline-block text-left">
	<div id="button">
		{% block button %}
			<span class="rounded-md shadow-sm">
				<button type="button"
						class="inline-flex justify-center w-full rounded-md px-4 py-2 bg-theme-primary text-sm leading-5 font-medium text-black hover:text-white hover:bg-theme-black transition ease-in-out duration-150"
						id="options-menu" aria-haspopup="true" aria-expanded="true">
					{% block buttonText %}{% endblock buttonText %}

					<svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
						 fill="currentColor">
						<path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
					</svg>
				</button>
			</span>
		{% endblock button %}
	</div>

	<div id="panel" class="hidden origin-top-right absolute right-0 mt-1 w-56 rounded-md shadow-lg">
		{% block panel %}
			<div class="rounded-md bg-white shadow-xs">
				<div class="panel-items pt-2" role="menu">
					{% for item in panelItems %}
						<a href="{{ path(item.routeName, item.routeParams|default([])) }}"
						   class="panel-item block px-4 py-2 text-sm leading-5 text-gray-700 hover:bg-gray-100 hover:text-gray-900 focus:outline-none focus:bg-gray-100 focus:text-gray-900 {{ item.additionalClass|default }}">
							{{ item.name }}
						</a>
					{% endfor %}
				</div>
			</div>
		{% endblock panel %}
	</div>
</div>